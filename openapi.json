{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample API",
    "description": "A simple API for testing Swagger UI",
    "version": "1.0.0"
  },
  "paths": {
    "/hello": {
      "get": {
        "summary": "Get a greeting message",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, world!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
